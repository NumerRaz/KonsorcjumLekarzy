@model KonsorcjumLekarzy.Database.Model.Specialization

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Administration/Views/Shared/_LayoutLogin.cshtml";
}

<h2>Specialization edit</h2>

